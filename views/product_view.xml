<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="product_template_form_view_zone" model="ir.ui.view">
            <field name="name">product.template.common.form.zone</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='options']" position="inside">
                    <div>
                        <label for="zone_id"/> : <field name="zone_id" readonly="1"/>
                    </div>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
